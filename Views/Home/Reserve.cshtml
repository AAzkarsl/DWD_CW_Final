@model DWD_CW_Final.Models.ReservationViewModel

<h1>Reserve a Book/CD</h1>

<form asp-action="Reserve" method="post">
    <div class="form-group">
        <label asp-for="GuestName" class="control-label"></label>
        <input asp-for="GuestName" class="form-control" />
        <span asp-validation-for="GuestName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GuestEmail" class="control-label"></label>
        <input asp-for="GuestEmail" class="form-control" />
        <span asp-validation-for="GuestEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookID" class="control-label"></label>
        <select asp-for="BookID" class="form-control" asp-items="ViewBag.Books" disabled></select>
        <span asp-validation-for="BookID" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ReservationDate" class="form-control" />
    <div class="form-group">
        <input type="submit" value="Reserve" class="btn btn-primary" />
    </div>
</form>
