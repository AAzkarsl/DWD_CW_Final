@model IEnumerable<DWD_CW_Final.Models.Message>

@{
    ViewData["Title"] = "Manage Messages";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1>Messages</h1>

<table class="table">
    <thead>
        <tr>
            <th>Guest</th>
            <th>Message Text</th>
            <th>Message Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.Guest.Name</td>
                <td>@message.MessageText</td>
                <td>@message.MessageDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@message.MessageID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
